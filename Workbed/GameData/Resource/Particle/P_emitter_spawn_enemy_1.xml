<Emitter>
	<Shader filepath = "Data/Resource/Shader/S_effect_particle.fx" />
	<Texture filepath = "Data/Resource/Texture/Particle/T_particle_enemy_spawn.dds" />
	
	<ActiveAtStart value="false" />
	<CircleEmitter value="true" />
	<HollowEmitter value="false"/>

	<EmitterSize x="2" y="0.5" z="1" /> <!-- This is fine -->
	<ParticleRotationDelta value="0"/>

	<ParticleRotation min = "0" max = "0" />
	<EmissionVariation yAxis="0" zAxis="0" />

	<!-- From 0 to 255 -->
	<ParticleStartColor r="255" g="255" b="255" />		
	<ParticleEndColor r="255" g="255" b="255" />
	<ParticleSpeed value="300"/>
	<ParticleSpeedDelta value="0"/>
	<!-- In seconds! -->
	<ParticleLifeTime value = "2" />
	<EmitterLifeTime value="0.7" /> <!-- when this reaches 0 the emitter will stop emitting, and when the last particle dies it will set the emitter to inactive. If the value is below 0 ( -1 ) it will loop infinitely) -->

	<!-- How often should a particle emitt? -->
	<EmittsPerSecond value = "15" /> 
	
	<!-- How many particles do you want to release per emitt? -->
	<ParticlesPerEmitt value = "3" /> 
	
	<!-- Scale particles, base size is 1 -->
	<ParticleScale min = "0.3" max = "0.3" />

	<!-- How fast should it fade out / in and how quick should it shrink / grow -->
	<ParticleAlphaDelta value = "-1.25" />
	<ParticleSizeDelta value = "-0.2" />
	
	<!-- Why would you even concider anything else than 1? -->
	<ParticleAlphaStart value = "1" />
		<!-- Imma calculate this shit with code and shit -->
	<UseAlphaDelta value = "true" />
</Emitter>