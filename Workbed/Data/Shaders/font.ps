SamplerState sampler0 : register ( s0 );
Texture2D FontTexture 	 : register ( t0 );

struct VS_OUTPUT
{
	float4 pos : SV_POSITION;
	float4 color : COLOR;
	float2 uv : TEXCOORD;
}; //40 byte

float4 main(VS_OUTPUT input) : SV_Target
{
	float4 text = FontTexture.Sample(sampler0, input.uv).rrrr * float4(input.color.rgb, 1);	
	return float4(1,1,1,1);
};

float4 outline(VS_OUTPUT input) : SV_Target
{
	float4 outline = FontTexture.Sample(sampler0, input.uv).aaaa;
	outline.rgb -= outline.rgb;
	return outline;
};