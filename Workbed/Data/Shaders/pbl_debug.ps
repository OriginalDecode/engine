SamplerState sampler0 	: register ( s0 );
Texture2D AlbedoTexture  	: register ( t0 );
Texture2D NormalTexture  	: register ( t1 );
Texture2D RoughnessTexture 	: register ( t2 );
Texture2D MetalnessTexture 	: register ( t3 );
Texture2D EmissiveTexture	: register ( t4 );
Texture2D OpacityTexture	: register ( t5 );
Texture2D AOTexture			: register ( t6 );
Texture2D HeightTexture		: register ( t7 );
Texture2D Displacement		: register ( t8 );
Texture2D LightmapTexture	: register ( t9 );
Texture2D ShininessTexture	: register ( t10 );

struct GBuffer
{
	float4 Albedo;
	float4 Normal;
	float4 Depth;
	float4 Emissive;
#ifdef _DEBUG
	float4 IDTexture;
	float4 HoverTexture;
#endif
};

struct VS_OUTPUT
{
	float4 pos : SV_POSITION;
	float4 normal : NORMAL;
	float2 uv : TEXCOORD;
	float4 binorm : BINORMAL;
	float4 tang : TANGENT;
	float4 worldpos : POSITION;
	float2 data0 : DATA;
	float4 displaced : DISPLACE;
#ifdef _DEBUG
	unsigned int entity_id : ID;
	unsigned int  hovering : HOVER;
#endif
};

struct ps_input_no_instance
{
	float4 pos : SV_POSITION;
	float4 normal : NORMAL;
	float2 uv : TEXCOORD;
	float4 binorm : BINORMAL;
	float4 tang : TANGENT;
	float4 worldpos : POSITION;
};

float3 ToColor(unsigned int e)
{
	float b = ((e) & 0xFF);
	float g = ((e >> 8) & 0xFF) ;
	float r = ((e >> 16) & 0xFF);
	return float3(r,g,b);
};

GBuffer main_non_instanced(ps_input_no_instance input) : SV_Target
{
	float3 _normal = NormalTexture.Sample(sampler0, input.uv).rgb * 2 - 1;
	float3 nnormal = normalize(input.normal.xyz );

	float3 binorm = normalize(cross(input.normal, input.tang));
	float3 tang = normalize(cross(input.normal, binorm));
	float3x3 tangentSpaceMatrix = float3x3(tang, binorm, nnormal);
	_normal = normalize(mul(_normal.xyz, tangentSpaceMatrix));

	_normal += 1;
	_normal *= 0.5;

	GBuffer output;

	float4 albedo = AlbedoTexture.Sample(sampler0, input.uv);
	albedo.rgb = pow(albedo.rgb, 1 / 2.2f);

	output.Albedo = albedo;
    output.Normal = float4(_normal, 1); //float4(_normal, 1);// input.data0.x);
    output.Depth.x = input.pos.z;
	output.Depth.y = 0;
    
    return output;
};

GBuffer main(VS_OUTPUT input) : SV_Target
{


	
	float3 _normal = NormalTexture.Sample(sampler0, input.uv).rgb * 2 - 1;
	float3 nnormal = normalize(input.normal.xyz );

	float3 binorm = normalize(cross(input.normal, input.tang));
	float3 tang = normalize(cross(input.normal, binorm));
	float3x3 tangentSpaceMatrix = float3x3(tang, binorm, nnormal);
	_normal = normalize(mul(_normal.xyz, tangentSpaceMatrix));

	_normal += 1;
	_normal *= 0.5;

	GBuffer output;
	bool override_pbl = false;
	float metalness_override = MetalnessTexture.Sample(sampler0, input.uv).r;
	float roughness_override = RoughnessTexture.Sample(sampler0, input.uv).r; 

	float4 albedo = AlbedoTexture.Sample(sampler0, input.uv);
	albedo.rgb = pow(albedo.rgb, 2.2);
	output.Albedo = albedo;

    output.Normal = float4(_normal, override_pbl ? input.data0.x : metalness_override);
    output.Depth.x = input.pos.z;
	output.Depth.y = override_pbl ? input.data0.y : roughness_override;
	output.Emissive = input.displaced;
#ifdef _DEBUG
    output.IDTexture = float4(ToColor(input.entity_id), 0);

	if(input.hovering != 0)
		output.HoverTexture = float4(1,0.68,0,1);
	else
		output.HoverTexture = float4(0,0,0,0);
	
#endif


    return output ;
};
