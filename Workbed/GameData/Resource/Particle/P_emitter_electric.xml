<Emitter>
	<Shader filepath = "Data/Resource/Shader/S_effect_particle.fx" />
	<Texture filepath = "Data/Resource/Texture/Particle/T_particle_smoke.dds" />
	
	<ActiveAtStart value="false" />
	<CircleEmitter value="false" />
	<HollowEmitter value="false"/>

	<EmitterSize x="1" y="1" z="1" /> <!-- This is fine -->
	<ParticleRotationDelta value="25"/>

	<ParticleRotation min = "-1.5" max = "1.8" />
	<EmissionVariation yAxis="360" zAxis="0" />

	<!-- From 0 to 255 -->
	<ParticleStartColor r="255" g="255" b="255" />		
	<ParticleEndColor r="255" g="255" b="255" />
	<ParticleSpeed value="500"/>
	<ParticleSpeedDelta value="-100"/>

	<!-- In seconds! -->
	<ParticleLifeTime value = "4" />
	<EmitterLifeTime value="0.3" /> <!-- when this reaches 0 the emitter will stop emitting, and when the last particle dies it will set the emitter to inactive. If the value is below 0 ( -1 ) it will loop infinitely) -->

	<!-- How often should a particle emitt? -->
	<EmittsPerSecond value = "5" /> 
	
	<!-- How many particles do you want to release per emitt? -->
	<ParticlesPerEmitt value = "5" /> 
	
	<!-- Scale particles, base size is 1 -->
	<ParticleScale min = "1" max = "1" />

	<!-- How fast should it fade out / in and how quick should it shrink / grow -->
	<ParticleAlphaDelta value = "-0.05" />
	<ParticleSizeDelta value = "-0.001" />
	
	<!-- Why would you even concider anything else than 1? -->
	<ParticleAlphaStart value = "1" />
		<!-- Imma calculate this shit with code and shit -->
	<UseAlphaDelta value = "true" />
</Emitter>