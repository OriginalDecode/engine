SamplerState sampler0	 	: register ( s0 );
Texture2D AlbedoTexture  	: register ( t0 );
Texture2D NormalTexture  	: register ( t1 );
Texture2D EmissiveTexture	: register ( t4 );
Texture2D DepthTexture		: register ( t7 );

struct VS_OUTPUT
{
	float4 pos : SV_POSITION0;
	float2 uv : TEXCOORD;
};

struct Output
{
	float4 Albedo;
	float4 Normal;
	float4 Depth;
	float4 Metalness;
	float4 Roughness;
	float4 Emissive;
};

Output main(VS_OUTPUT input) : SV_Target
{
	Output output;
	output = (Output)0;
	
	float far = 1.;
	float near = 0.01;
	
	output.Depth = float4(DepthTexture.Sample(sampler0, input.uv).xxx, 1) ;

	output.Albedo = float4(AlbedoTexture.Sample(sampler0, input.uv).rgb, 1);
	output.Normal = float4(NormalTexture.Sample(sampler0, input.uv).rgb, 1) * 2 - 1;

	output.Metalness = float4(NormalTexture.Sample(sampler0, input.uv).aaa, 1);
	output.Roughness = float4(DepthTexture.Sample(sampler0, input.uv).yyy, 1);
	output.Emissive = float4(EmissiveTexture.Sample(sampler0, input.uv).rgb, 1);

	return output;

};
